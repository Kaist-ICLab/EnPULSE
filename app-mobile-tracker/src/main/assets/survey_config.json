{
    "id": "full_feature_demo",
    "notification": {
        "title": "Full Feature Demo",
        "message": "This survey showcases all supported question types and configurations."
    },
    "schedule": {
        "type": "INTERVAL",
        "intervalSec": 60,
        "dailyStartTimeHour": 0,
        "dailyEndTimeHour": 23
    },
    "questions": [
        {
            "type": "TEXT",
            "shouldAnswer": true,
            "text": "1. [TEXT] Mandatory Question. How are you?"
        },
        {
            "type": "TEXT",
            "shouldAnswer": false,
            "text": "2. [TEXT] Optional Question. Skip if you want."
        },
        {
            "type": "NUMBER",
            "shouldAnswer": true,
            "text": "3. [NUMBER] How many hours did you sleep? (Try < 4)",
            "trigger": {
                "predicate": {
                    "type": "LESS_THAN",
                    "value": 4
                },
                "questions": [
                    {
                        "type": "TEXT",
                        "shouldAnswer": true,
                        "text": "   -> [TRIGGERED] Only < 4 hours? Why so little?"
                    }
                ]
            }
        },
        {
            "type": "NUMBER",
            "shouldAnswer": true,
            "text": "4. [NUMBER] Rate your stress (0-10) - (Try >= 8)",
            "trigger": {
                "predicate": {
                    "type": "GREATER_THAN_OR_EQUAL",
                    "value": 8
                },
                "questions": [
                    {
                        "type": "TEXT",
                        "shouldAnswer": true,
                        "text": "   -> [TRIGGERED] High stress detected! Do you want to take a break?"
                    }
                ]
            }
        },
        {
            "type": "RADIO",
            "shouldAnswer": true,
            "text": "5. [RADIO] Simple String Options",
            "options": [
                {
                    "value": "opt_a",
                    "displayText": "Option A"
                },
                {
                    "value": "opt_b",
                    "displayText": "Option B"
                }
            ]
        },
        {
            "type": "RADIO",
            "shouldAnswer": true,
            "text": "6. [RADIO] Complex Options (with Free Response)",
            "options": [
                {
                    "value": "yes",
                    "displayText": "Yes"
                },
                {
                    "value": "no",
                    "displayText": "No"
                },
                {
                    "value": "other",
                    "displayText": "Other (Please specify)",
                    "allowFreeResponse": true
                }
            ]
        },
        {
            "type": "CHECKBOX",
            "shouldAnswer": true,
            "text": "7. [CHECKBOX] Select Multiple",
            "options": [
                {
                    "value": "red",
                    "displayText": "Red"
                },
                {
                    "value": "green",
                    "displayText": "Green"
                },
                {
                    "value": "blue",
                    "displayText": "Blue"
                }
            ]
        }
    ]
}